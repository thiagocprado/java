
public class TestaPontoFlutuante {

	public static void main(String[] args) {
		
		double salario;
		double idade;
		double divisao = 3.14 / 2;
		
		
		salario = 1250.70;
		System.out.println("Meu salário é " + salario);
		
		idade = 20;
		System.out.println("Minha idade é " + idade);
		
		System.out.println(divisao);
	}
}
